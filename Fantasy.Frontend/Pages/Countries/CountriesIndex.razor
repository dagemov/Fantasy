@page "/countries"


<h3>Countries</h3>

@if(Countries is null)
{
    <p>Loading...</p>
}
else
{
    <div class="mb-2">
        <RadzenButton  Icon="add">New</RadzenButton>
    </div>
    <GenericList MyList="Countries">
        <Body>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <td>Country</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var country in Countries)
                    {
                        <tr>
                            <td>@country.Name</td>
                            <td>
                                <RadzenButton ButtonStyle="ButtonStyle.Warning" Icon="edit_square">Edit</RadzenButton>
                                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete_forever" />
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </Body>
    </GenericList>   
}


