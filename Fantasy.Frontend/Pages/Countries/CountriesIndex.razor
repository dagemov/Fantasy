@page "/countries"

<h3>Countries</h3>

@if(Countries is null)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <td>Country</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Countries)
            {
                <tr>
                    <td>@country.Name</td>
                    <td>
                        <a class="btn btn-warning">Edit</a>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    
}


